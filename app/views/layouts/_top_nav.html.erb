
<header class="<%= current_page?(root_path) ? "hero" : "hero small" %>">
  <section class="title">
    <h3>Welcome to</h3>
    <h1>The Jungle</h1>
    <h2>Where you can find any plants!</h2>
  </section>
</header>
<nav class="navbar navbar-expand-lg navbar-dark sticky-nav">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">Jungle</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <%# <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="navbarDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          > %>
            <%# Categories %>
          <%# </a>
          <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown"> %>
            <% Category.all.each do |category| %>
            <li class="nav-item">
              <%= link_to category.name, category, class: "nav-link" %>
            </li>
            <% end %>
            <li class="nav-item">
              <%= link_to [:about], class: 'nav-link' do %>
                About <%= fa_icon "info-circle" %>
              <% end %>
            </li>
          <%# </ul>
        </li> %>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-danger"
            href="#"
            id="navbarDropdownAdmin"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Admin
          </a>
          <ul class="dropdown-menu dropdown-menu-dark">
            <li><%= link_to 'Dashboard', [:admin, :root], class: "nav-link" %></li>
            <li><%= link_to 'Products', [:admin, :products], class: "nav-link" %></li>
            <li><%= link_to 'Categories', [:admin, :categories], class: "nav-link" %></li>
          </ul>
        </li>

        <% unless [signup_path, login_path].inject(false) { |bool, path| bool || current_page?(path) } %>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-danger"
            href="#"
            id="navbarDropdownAdmin"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <%= current_user ? current_user.first_name : "Account" %>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark">
            <% if current_user %>
              <li>
                <%= link_to cart_path, class: "nav-link" do %>
                  &nbsp; <%= fa_icon "shopping-cart" %>&nbsp; My Cart (<%= cart.size %>)
                <% end %>
              </li>
              <li>
                <%= link_to '/logout', class: 'nav-link' do %>
                  &nbsp; <%= fa_icon "sign-out" %> &nbsp; Sign Out
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to cart_path, class: "nav-link " do %>
                  &nbsp; <%= fa_icon "shopping-cart" %>&nbsp; My Cart (<%= cart.size %>)
                <% end %>
              </li>
              <li>
                <%= link_to '/login', class: 'nav-link' do %>
                  &nbsp; <%= fa_icon "sign-in" %> &nbsp; Sign In
                <% end %>
              </li>
              <li>
                <%= link_to '/signup', class: 'nav-link' do %>
                  &nbsp; <%= fa_icon "user-plus" %> &nbsp; Sign Up
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
<script>
(function(){
const gnr = () => {
    const uptitle = document.querySelector("section.title h3");
    const subtitle = document.querySelector("section.title h2");
    const header = document.querySelector("header.hero");

    uptitle.style.fontSize = "5em";
    uptitle.style.fontWeight = 900;
    uptitle.style.textAlign = "center";

    subtitle.innerHTML =
      "<p>Watch it bring you to your</p><p> shu-n-n-n-n-n-n-n-n knees, knees!</p>";
  };
  const title = document.querySelector("header.hero");
  title.addEventListener("dblclick", gnr);

})()
  </script>
